namespace Mrc;

table Vertex
{
    position: [float];
    normal: [float];
    uv: [float];
}

table Cluster
{
    vertices: [Vertex]; // List of vertices
    indices: [uint32];  // List of indices
}

table Node
{
    clusters: [Cluster];
}

table ClusteredStaticModel
{
    nodes: [Node]; // List of meshes
}

root_type ClusteredStaticModel;